@page
@model Planeta_Kierowców.Pages.Zamówienia.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<br />
<h2 class="text-info">Szczegóły</h2>
<br />

<div class="border-container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="order.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="order.Firma"></label>
            </div>
            <div class="col-5">
                @Html.Display("order.Firma")
            </div>
        </div>
 
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="order.Rodzaj"></label>
            </div>
            <div class="col-5">
                @Html.Display("order.Rodzaj")
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="order.Kierowca"></label>
            </div>
            <div class="col-5">
                @Html.Display("order.Kierowca")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <a asp-page="Edit" asp-route-id="@Model.order.Id" class="btn btn-primary text-white">Edytuj</a>
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Powrót</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}