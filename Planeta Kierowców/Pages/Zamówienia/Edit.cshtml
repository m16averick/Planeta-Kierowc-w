@page
@model Planeta_Kierowców.Pages.Zamówienia.EditModel
@{
    ViewData["Title"] = "Edit";
    @inject UserManager<ApplicationUser> UserManager;
}

<br />
<h2 class="text-info">Edytuj istniejące zlecenie</h2>
<br />

<div class="border-container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Zlecenia.ID_Zlecenie" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Miejsce_odbioru"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Miejsce_odbioru" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Miejsce_odbioru" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Czas_odbioru"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Czas_odbioru" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Czas_odbioru" class="text-danger"></span>
        </div>




        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Miejsce_zdania"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Miejsce_zdania" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Miejsce_zdania" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Czas_zdania"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Czas_zdania" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Czas_zdania" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Status_zlecenia"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Status_zlecenia" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Status_zlecenia" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Zlecenia.Kierowca_ID"></label>
            </div>
            <div class="col-5">
                <input asp-for="Zlecenia.Kierowca_ID" class="form-control" />
            </div>
            <span asp-validation-for="Zlecenia.Kierowca_ID" class="text-danger"></span>
        </div>






        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Zatwierdź" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Powrót</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}