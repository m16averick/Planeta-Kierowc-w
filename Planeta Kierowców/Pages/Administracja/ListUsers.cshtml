@page
@model Planeta_Kierowców.Pages.Administracja.ListUsersModel
@{
    ViewData["Title"] = "ListUsers";
    @inject UserManager<ApplicationUser> UserManager;
}

<h1>Lista użytkowników</h1>
@if (Model.users.Any())
{


    foreach (var user in Model.users)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>

            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                <a asp-page="EditUser" asp-route-id="@user.Id" class="btn btn-success text-white" class="btn btn-danger">Edytuj</a>                     
                <button type="submit" onclick="return confirm('Czy na pewno chcesz się pozbyć @user.UserName ?')" class="btn btn-danger">Usuń</button>



                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Nie ma żadnego usera w bazie
        </div>

    </div>
}