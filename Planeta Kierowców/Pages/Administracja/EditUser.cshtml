@page
@model Planeta_Kierowców.Pages.Administracja.EditUserModel
@{
    ViewData["Title"] = "EditUser";
}



<h1>Edytuj użytkownika</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ApUser.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApUser.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ApUser.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApUser.Email" class="form-control">
            <span asp-validation-for="ApUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ApUser.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApUser.UserName" class="form-control">
            <span asp-validation-for="ApUser.UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>




        <div class="card">
            <div class="card-header">
                <h2>Role</h2>
            </div>
            <div class="card-body">
                @if (true)
                {
                    int i = 0;
                    foreach (string role in Model.model.AllRoles)
                    {
                        <div class="form-group row">
                            <h5 class="card-title">@role</h5>


                            <div class="col-sm-10">  <input type="checkbox" name="@role" value="1" asp-for="NewRoleArray[i]" checked="@Model.IsUserInARoleAsync(role, Model.ApUser)" /> </div>
                        </div>
                        i += 1;
                    }
                }
                else
                {
                    <h5 class="card-title">W tym momencie brak</h5>
                }
            </div>
            <div class="card-footer">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Zapisz</button>
                        <a asp-page="ListUsers" class="btn btn-danger">Odrzuć</a>
                    </div>
                </div>
            </div>
        </div>


    </form>
