@page
@model Planeta_Kierowców.Pages.Administracja.EditUserModel
@{
    ViewData["Title"] = "EditUser";
}



<h1>Edytuj użytkownika</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="User.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Email" class="form-control">
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.UserName" class="form-control">
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="ListUsers" class="btn btn-danger">Odrzuć</a>
        </div>
    </div>


</form>